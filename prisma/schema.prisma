generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String
}
enum Sex {
  Male
  Female
  Unisex
}
model Cloth {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String
  sizes       String[]
  price       Int
  discount    Int
  finalPrice  Int
  image       String
  color       String
  sex         Sex
  about       String
  details     ClothDetails?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ClothDetails {
  id        Int    @id @default(autoincrement())
  material  String
  fit       String
  cloth     Cloth @relation(fields: [clothId], references: [id])
  clothId   Int   @unique
}
